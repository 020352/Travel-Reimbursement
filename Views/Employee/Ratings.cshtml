@model Reviews
@{
  Layout="/Views/Shared/_userLayout.cshtml";
}
<body style="background-color: background: rgb(70,70,185);
background: linear-gradient(90deg, rgba(70,70,185,1) 21%, rgba(16,159,187,1) 97%);;">
<div class="feedback">
<strong>Thank you for using this web application to apply reimbursement. We would like to know how we performed. Please spare some moments to give us your valuable feedback as it will help us in improving our service.</strong>
 
<h4>Please rate your service experience for the following parameters</h4>
 
<form method="post">
  <label asp-for="EmployeeID">Employee ID</label>                 
  <input asp-for="EmployeeID" type="text" class="form-control" value='@ViewBag.Message' disabled/>
<label asp-for="ratings">1. Your overall experience with us ?</label><br>
  
<label asp-for="ratings">Give your ratings</label>
<select asp-for="ratings" class="form-control" id="t1">
<option>--Choose--</option>
<option>Good</option>
<option>Average</option>
<option>Best</option>
<option>Worst</option>
</select>
  <div class="clear"></div> 
  <hr class="survey-hr"> 
<label asp-for="feedback">2. Any Other suggestions:</label><br/><br/>
<textarea type="text" asp-for="feedback" cols="75"  rows="5" style="100%"></textarea><br>
<br>
  <div class="clear"></div> 
<input style="background:#43a7d5;color:#fff;padding:12px;border:0" type="submit" value="Submit your review"> 
</form>
</body>

