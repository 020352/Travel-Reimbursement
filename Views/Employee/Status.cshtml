@{
    Layout="/Views/Shared/_userLayout.cshtml";
}
<style>
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 16px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  transition-duration: 0.4s;
  cursor: pointer;
}
h2{
  margin-top: 200px;
  margin-left: 40px;
}

.button1 {
  background-color: white; 
  color: black; 
  border: 2px solid #4CAF50;
  margin-top: 50px;
  margin-left: 5px;
}

.button1:hover {
  background-color: #43b947;
  color: white;
}
.button2 {
  background-color: white; 
  color: black; 
  border: 2px solid rgb(211, 36, 36);
}

.button2:hover {
  background-color: red;
  color: white;
}
.button5 {
  background-color: white;
  color: black;
  border: 2px solid #555555;
  margin-left: 260px;
}

.button5:hover {
  background-color: #555555;
  color: white;
}
</style>
<body style="background-color:#7CB9E8">
  <h2 style="text-align: center;">Here, You can view the status of the reports</h2>
  <div class="container">
  <a type="button" class="button button5" asp-controller="Employee" asp-action="PendingForm">Pending Reports</a>
  <a type="button" class="button button1" asp-controller="Employee" asp-action="ApprovedForm">Approved Reports</a>
  <a type="button" class="button button2" asp-controller="Employee" asp-action="RejectedForm">Rejected Reports</a>
  </div>
  @if (@ViewBag.alert != null)
  {
  <script type="text/javascript">
  window.onload = function()
  {
     alert("@ViewBag.alert");
  };
  </script>
  }
</body>